{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_kategoria_edit'|trans({'%id%': kategoria.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_kategoria_edit'|trans({'%id%': kategoria.id|default('')}) }}</h1>

    {{ form_start(form, { method: 'PUT', action: url('kategoria_edit', {id: kategoria.id}) }) }}
    {{ form_widget(form) }}

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('kategoria_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}