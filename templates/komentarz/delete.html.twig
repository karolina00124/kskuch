{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_komentarz_delete'|trans({'%id%': komentarz.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_komentarz_delete'|trans({'%id%': komentarz.id|default('')}) }}</h1>
    <a> {{ 'question_komentarz_delete'|trans() }} </a>
    {{ form_start(form, { method: 'DELETE', action: url('komentarz_delete', {id: komentarz.id}) }) }}
    {{ form_widget(form) }}
    {% if komentarz is defined and komentarz|length %}
    <dl class="dl-horizontal">
        <dt>{{ 'label_id'|trans }}</dt>
        <dd>{{ komentarz.id }}</dd>
        <dt>{{ 'label_tresc'|trans }}</dt>
        <dd>{{ komentarz.tresc }}</dd>
    </dl>

    {% endif %}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('komentarz_index') }}" class="btn btn-light">
            {{ 'action_back_to_list'|trans }} <i class="bi bi-arrow-return-left"></i>
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}