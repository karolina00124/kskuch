{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_przepis_delete'|trans({'%id%': przepis.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_przepis_delete'|trans({'%id%': przepis.id|default('')}) }}</h1>
    <a> {{ 'question_przepis_delete'|trans() }} </a>
    {{ form_start(form, { method: 'DELETE', action: url('przepis_delete', {id: przepis.id}) }) }}
    {{ form_widget(form) }}
    {% if przepis is defined and przepis|length %}
    <dl class="dl-horizontal">
        <dt>{{ 'label_id'|trans }}</dt>
        <dd>{{ przepis.id }}</dd>
        <dt>{{ 'label_title'|trans }}</dt>
        <dd>{{ przepis.nazwa }}</dd>
    </dl>

    {% endif %}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('przepis_index') }}" class="btn btn-light">
            {{ 'action_back_to_list'|trans }} <i class="bi bi-arrow-return-left"></i>
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}