{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_tag_delete'|trans({'%id%': tag.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_tag_delete'|trans({'%id%': tag.id|default('')}) }}</h1>
    <a> {{ 'question_tag_delete'|trans() }} </a>
    {{ form_start(form, { method: 'DELETE', action: url('tag_delete', {id: tag.id}) }) }}
    {{ form_widget(form) }}
    {% if tag is defined and tag|length %}
    <dl class="dl-horizontal">
        <dt>{{ 'label_id'|trans }}</dt>
        <dd>{{ tag.id }}</dd>
        <dt>{{ 'label_title'|trans }}</dt>
        <dd>{{ tag.tagNazwa }}</dd>
    </dl>

    {% endif %}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('tag_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}