{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_uzytkownik_delete'|trans({'%id%': uzytkownik.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_uzytkownik_delete'|trans({'%id%': uzytkownik.id|default('')}) }}</h1>
    <div class="delete"><a> {{ 'question_delete'|trans() }} </a></div>
    {{ form_start(form, { method: 'DELETE', action: url('uzytkownik_delete', {id: uzytkownik.id}) }) }}
    {{ form_widget(form) }}
    {% if uzytkownik is defined and uzytkownik|length %}
    <dl class="dl-horizontal">
        <dt>{{ 'label_id'|trans }}</dt>
        <dd>{{ uzytkownik.id }}</dd>
        <dt>{{ 'label_nazwa_uzytkownik'|trans }}</dt>
        <dd>{{ uzytkownik.nazwaUzytkownik }}</dd>
    </dl>

    {% endif %}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('uzytkownik_index') }}" class="btn btn-light">
            {{ 'action_back_to_list'|trans }} <i class="bi bi-arrow-return-left"></i>
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}